{
    "extends": "react",
    "rules": {
        "react/prop-types": 0,
        "quotes": 0,
        "no-underscore-dangle": 0,
        "no-unused-vars":"warn",
        "max-len":"off",
        "react/prefer-stateless-function": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "comma-dangle":"off",
        "indent": ["error", 2],
        "space-before-function-paren": "off",
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-plusplus":"off",
        "no-extra-boolean-cast":"off",
        "no-param-reassign":"off",
        "semi": [
            "error",
            "never"
        ],
        "eol-last": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "log",
                    "warn",
                    "error"
                ]
            }
        ]
    },
    "globals": {
        "localStorage": true,
        "fetch": true,
        "FormData": true,
        "document": true,
        "setTimeout": true,
        "clearTimeout": true,
        "setInterval": true,
        "clearInterval": true
    }
}